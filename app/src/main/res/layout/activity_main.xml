<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:gravity="end"
        android:maxLines="1"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:maxLines="1"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp" />


    //----------------FOR PART 2------------------

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt">

        <Button
            android:id="@+id/buAC"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onClear"
            android:text="AC"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buPlusMinus"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onBracketStrat"
            android:text="("
            android:textSize="18sp" />

        <Button
            android:id="@+id/buPer"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onvBracketEnd"
            android:text=")"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buDiv"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="onOperator"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt">

        <Button
            android:id="@+id/bu7"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="7"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bu8"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bu9"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buMul"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="onOperator"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt">

        <Button
            android:id="@+id/bu4"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bu5"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="5"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bu6"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buSub"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="onOperator"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt">

        <Button
            android:id="@+id/bu1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bu2"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bu3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buSum"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="onOperator"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


    //----------------FOR PART 3------------------

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDecimal"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/bu0"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDigit"
            android:text="0"
            android:textSize="18sp" />

        <ImageView
            android:padding="20dp"
            android:src="@drawable/ic_back"
            android:id="@+id/ivDel"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onDelete"
            android:text="."
            android:textSize="18sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/buEq"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="onEqual"
            android:text="="
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>